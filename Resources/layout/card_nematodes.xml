<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvNematodes"
    android:backgroundTint="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#ffffff"
        android:paddingVertical="@dimen/margin_medium"
        android:paddingHorizontal="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNematodes"
            android:text="@string/form_nematodes"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioGroup
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/rgNematodes"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNematodes">

            <RadioButton
                android:id="@+id/rbNematodes1"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbNematodes2"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbNematodes3"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbNematodes4"
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbNematodes5"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

      <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilObservationsNematodes"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgNematodes">

            <com.google.android.material.textfield.TextInputEditText
                android:hint="@string/form_observations"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibNematodes1"
            android:src="@drawable/ic_add_a_photo"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="0px"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="150px"
            app:layout_constraintTop_toBottomOf="@+id/tilObservationsNematodes"/>
      
            <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibNematodes2"
            android:src="@drawable/ic_add_a_photo"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="0px"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="150px"
            app:layout_constraintStart_toEndOf="@+id/ibNematodes1"
            app:layout_constraintTop_toBottomOf="@+id/tilObservationsNematodes"/>
      
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibNematodes3"
            android:src="@drawable/ic_add_a_photo"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="0px"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="150px"
            app:layout_constraintStart_toEndOf="@+id/ibNematodes2"
            app:layout_constraintTop_toBottomOf="@+id/tilObservationsNematodes"/>
      
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibNematodes4"
            android:src="@drawable/ic_add_a_photo"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="0px"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="150px"
            app:layout_constraintStart_toEndOf="@+id/ibNematodes3"
            app:layout_constraintTop_toBottomOf="@+id/tilObservationsNematodes"/>
     
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibNematodes5"
            android:src="@drawable/ic_add_a_photo"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="0px"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="150px"
            app:layout_constraintStart_toEndOf="@+id/ibNematodes4"
            app:layout_constraintTop_toBottomOf="@+id/tilObservationsNematodes"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>