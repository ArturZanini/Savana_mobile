<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCompaction"
    android:backgroundTint="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#ffffff"
        android:paddingVertical="@dimen/margin_medium"
        android:paddingHorizontal="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCompaction"
            android:text="@string/form_compaction"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioGroup
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/rgCompaction"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCompaction">

            <RadioButton
                android:id="@+id/rbCompaction1"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbCompaction2"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbCompaction3"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbCompaction4"
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbCompaction5"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilObservationsCompaction"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgCompaction">

            <com.google.android.material.textfield.TextInputEditText
                android:hint="@string/form_observations"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibCompaction1"
            android:src="@drawable/ic_add_a_photo"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="0px"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="150px"
            app:layout_constraintTop_toBottomOf="@+id/tilObservationsCompaction"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibCompaction2"
            android:src="@drawable/ic_add_a_photo"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="0px"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="150px"
            app:layout_constraintStart_toEndOf="@+id/ibCompaction1"
            app:layout_constraintTop_toBottomOf="@+id/tilObservationsCompaction"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibCompaction3"
            android:src="@drawable/ic_add_a_photo"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="0px"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="150px"
            app:layout_constraintStart_toEndOf="@+id/ibCompaction2"
            app:layout_constraintTop_toBottomOf="@+id/tilObservationsCompaction"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibCompaction4"
            android:src="@drawable/ic_add_a_photo"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="0px"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="150px"
            app:layout_constraintStart_toEndOf="@+id/ibCompaction3"
            app:layout_constraintTop_toBottomOf="@+id/tilObservationsCompaction"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibCompaction5"
            android:src="@drawable/ic_add_a_photo"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="0px"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="150px"
            app:layout_constraintStart_toEndOf="@+id/ibCompaction4"
            app:layout_constraintTop_toBottomOf="@+id/tilObservationsCompaction"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>